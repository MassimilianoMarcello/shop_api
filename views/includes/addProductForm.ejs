<form action="/api/add-product" method="POST" class="product-form">
    <div class="form-group">
        <label for="nome">Name of the product</label>
        <input type="text" id="nome" name="nome" required>
    </div>
    
    <div class="form-group">
        <label for="prezzo">Price</label>
        <input type="number" id="prezzo" name="prezzo" step="0.01" required>
    </div>
    
    <div class="form-group">
        <label for="descrizione">Description</label>
        <textarea id="descrizione" name="descrizione" required></textarea>
    </div>
    
    <div class="form-group">
        <label for="immagine">Image url</label>
        <input type="url" id="immagine" name="immagine" required>
    </div>
    
    <button type="submit" class="submit-btn">Add New Product</button>
</form>
